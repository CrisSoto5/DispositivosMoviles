<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.joelc.proyectosaram.RegistrarHorarioActivity">

    <!-- Layout para actualizar el horario de atenciÃ³n de los monitores -->

    <TextView
        android:id="@+id/textViewActualizarHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hapticFeedbackEnabled="false"
        android:text="@string/lbl_actualizar_Horario"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/textViewDia_a_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewActualizarHorario"
        android:layout_marginTop="70dp"
        android:text="@string/lbl_dia"
        android:textSize="14dp" />

    <Spinner
        android:id="@+id/spinnerDia_a_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewDia_a_h"
        android:layout_marginTop="20dp"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textViewHoraInicio_a_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerDia_a_h"
        android:layout_marginTop="40dp"
        android:text="@string/lbl_HoraInicio"
        android:textSize="14dp" />

    <Spinner
        android:id="@+id/spinnerHoraInicio_a_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewHoraInicio_a_h"
        android:layout_marginTop="20dp"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textViewHoraFin_a_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerHoraInicio_a_h"
        android:layout_marginTop="40dp"
        android:text="@string/lbl_HoraFin"
        android:textSize="14dp" />

    <Spinner
        android:id="@+id/spinnerHoraFin_a_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewHoraFin_a_h"
        android:layout_marginTop="20dp"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btn_guardar_a_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerHoraFin_a_h"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/lbl_guardar"
        android:textSize="14dp"/>

</RelativeLayout>
